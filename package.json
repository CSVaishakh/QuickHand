{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-auth": "^1.4.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "postgres": "^3.4.7"
  },
  "scripts": {
    "dev": "bun run --hot index.ts",
    "db:start": "docker compose QuickHand-postgres",
    "db:stop": "docker stop QuickHand-postgres",
    "db:shell": "docker exec -it QuickHand-postgres psql -U user -d QuickHand-DB",
    "db:generate": "bun drizzle-kit generate --config src/db/drizzle.config.ts",
    "db:push": "bun drizzle-kit push --config src/db/drizzle.config.ts"
  }
}
